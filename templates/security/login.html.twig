{% extends 'base.html.twig' %}

{% block title %}Se connecter {% endblock %}

{% block body %}
<div class="container" style="border: 5px solid;margin-top: 100px;justify-content: center;width: 400px;border-radius: 10px;">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    

    <h1 class="h3 mb-3 font-weight-normal" style="border: 2px solid;text-align: center;background-color: orangered;color:white;">Authentification</h1>
    <label for="inputUsername" >Nom d'utlisateur : </label>
    <input type="text"  placeholder="Nom d'utlisateur" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus style="margin-top: 20px;margin-bottom: 20px;">
    <label for="inputPassword">Mot de passe : </label>
    <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" class="form-control" autocomplete="current-password" required style="margin-top: 20px;margin-bottom: 20px;">

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
<div style="display:contents; justify-content: center;">
    <button class="btn btn-lg btn-primary" type="submit " style="text-align: center;margin-left: 35%;margin-bottom: 30px;background-color: orangered;">
        valider
    </button>
</div>
</form>
</div>
{% endblock %}
