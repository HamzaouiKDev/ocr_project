{% extends 'base.html.twig' %}

{% block title %} Application Ocr Etats financiers {% endblock %}

{% block body %}
                 <div id="page" attr="{{page}}"></div>    
                 <div id="urlPdf" attr2="{{url}}"></div>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 {% if app.user %}
          <div class="appBar">
              <div  class="message">
                <span class="badge badge-warning">Bienvenue:  {{ app.user.userName }}</span>
              </div>
              <div  class="matricule">
                <span class="badge badge-dark">Matricule :  {{ app.session.get('matricule') }}</span>
              </div>
              <div  class="annee">
                <span class="badge badge-info">Annee :  {{ app.session.get('annee') }}</span>
              </div>
              
              <div  class="pageencours">
                <span class="badge badge-success">Page en cours : {{ app.session.get('pageEnCours') }}</span>
              </div>
              <div  class="typepage">
                <span class="badge badge-primary ma-class">{{ app.session.get('typePage') }}</span>
                                  {% for type, messages in app.flashes %}
                                          {% for message in messages %}
                                              <div class="alert alert-{{ type }}">
                                                  {{ message }}
                                              </div>
                                          {% endfor %}
                                   {% endfor %}
              </div>
              

              <div class="update">
              {% include "OCR/update_type_page.html.twig" %} 
            </div>
          <div class="deconnexion">  
           
          <a href="{{ path('app_logout') }}" class="btn btn-warning">Deconnexion</a>
          </div>
          
          </div>

          {% endif %}

<div class="global">
        <div class="left d-4">
          
          <canvas id="pdf-canvas"></canvas>
        </div>
        <div  class="right" >
      <div class="page_nav">
        
        <div  class="pages-cours">
          
        </div>
          {% if  app.session.get('pageEnCoursIndex') == 0  %}

           <a href="{{path('get_page_precedente')}}" class="btn btn-primary disabled">precedent</a>

           {% else %}

           <a href="{{path('get_page_precedente')}}" class="btn btn-primary">precedent</a>


           {% endif %}
           {% if  app.session.get('nbrPages')-1  ==  app.session.get('pageEnCoursIndex')  %}

           <a href="javascript:void(0)" onclick="myFunction();" class="btn btn-primary disabled">Valider</a>

           {% else %}

           <a href="javascript:void(0)" onclick="myFunction();" class="btn btn-primary">Valider</a>


           {% endif %}
           <div class="add">

            <button id="btnAjouter">Ajouter</button>
    
          </div>
  
          <button id="saveButton" style="display: none;">Enregistrer les modifications</button>

       </div>
                        <div class="table-responsive ">
                              <table id="sample_data" class="table table-bordered table-striped  ">
                                  <thead>
                                    <tr>
                                    <th>ID</th>
                                    <th>Code</th>
                                    <th>Label</th>
                                    <th>Notes</th>
                                    <th>Annee n</th>
                                    <th>Annee n-1</th>
                                    </tr>
                                  </thead>
                                  <tbody></tbody>
                              </table>
            
          
                        </div>  
            
       </div>

</div>       
{% endblock %}


        